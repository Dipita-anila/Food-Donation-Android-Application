<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="740dp"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DashBoard"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold">

            </TextView>


        </RelativeLayout>


        <GridLayout
            android:layout_marginTop="0dp"
            android:columnCount="1"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#A3EBB1"
                >

                <LinearLayout

                    android:id="@+id/Report"
                    android:orientation="vertical"
                    android:padding="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/sitebtn1"
                        android:layout_marginTop="12dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="BASMAH Foundation"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/NGOListButton"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#A3EBB1"
                >

                <LinearLayout

                    android:orientation="vertical"
                    android:padding="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="Bidyanondo Foundation"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#A3EBB1"
                >

                <LinearLayout
                    android:id="@+id/Clapperboard"
                    android:orientation="vertical"
                    android:padding="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_marginTop="16dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:text="FOOD BANK NETWORK BANGLADESH"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#A3EBB1"
                >

                <LinearLayout
                    android:id="@+id/another"
                    android:orientation="vertical"
                    android:padding="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="APON Foundation "
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#A3EBB1"
                >

                <LinearLayout
                    android:id="@+id/Gallery"
                    android:orientation="vertical"
                    android:padding="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="The Hunger Project"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>








        </GridLayout>



    </LinearLayout>





</ScrollView>
