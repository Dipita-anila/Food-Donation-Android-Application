<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/login_background"
    tools:context=".AdminToDonnar_msg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/admtitletxtid"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="590dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:text="Simple Message for the Donnar:"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/admeditTextNameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Message"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="120dp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/admmsgsendbtnid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admeditTextNameid"
        android:layout_centerInParent="true"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="30dp"
        android:text="Click_here"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="#A3EBB1"/>

    <TextView
        android:id="@+id/admmsgshowid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admmsgsendbtnid"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/black" />




</RelativeLayout>