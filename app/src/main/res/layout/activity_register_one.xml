<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_one"
    android:background="@drawable/login_background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Here's your First step with us!"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">

            </TextView>
            <ImageView
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:src="@drawable/wastewaste">
            </ImageView>
        </RelativeLayout>



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:columnCount="1"
            android:rowCount="4"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="25dp"
                android:layout_margin="25dp"
                android:layout_marginRight="39dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/white">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:id="@+id/regnameid"
                    android:layout_marginLeft="25dp">

                </EditText>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="25dp"
                android:layout_margin="25dp"
                android:layout_marginRight="39dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/white">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:id="@+id/regmailid"
                    android:layout_marginLeft="25dp">

                </EditText>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="39dp"
                android:layout_marginLeft="39dp"
                app:cardCornerRadius="25dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="@color/white">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:id="@+id/regnumberid"
                    android:layout_marginLeft="25dp">

                </EditText>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="39dp"
                android:layout_marginLeft="39dp"
                app:cardCornerRadius="25dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="@color/white">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:id="@+id/regpasswrdid"
                    android:layout_marginLeft="25dp">

                </EditText>

            </androidx.cardview.widget.CardView>


            <!-- style="@style/loginButton"
            android:layout_marginTop="@dimen/loginViewsMargin"
                                      belongs to down -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cirRegisterButton"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="18dp"

                app:cardBackgroundColor="#A3EBB1"
                android:layout_gravity="center_horizontal"


                >
                <TextView
                    android:text="Register"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:layout_marginLeft="34dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/regbtnid"
                    android:gravity="center_horizontal">

                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="50dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="#A3EBB1"
                android:layout_marginTop="23dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                >

            </androidx.cardview.widget.CardView>




        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:weightSum="12">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="3"
                android:background="#94C973" />


            <!-- style="@style/viewParent.headerText.NoMode"
                 belongs to down texview-->

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Use other Methods"
                android:textAlignment="center"
                android:textColor="#08313A"
                android:textSize="12sp"
                android:gravity="center_horizontal" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="3"
                android:background="#94C973" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_google_plus" />
        </LinearLayout>
    </LinearLayout>



</ScrollView>